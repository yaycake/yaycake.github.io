
  <projectcards>
    <div class="project-cards" style="grid-template-columns: repeat(<%= blog.articles.length %>, 1fr); grid-template-rows: 1fr;">

      <% blog.articles.reverse.each do |article| %>
        <% link_to article.url do %>

          <div class="project-card  <%= article.data.title.downcase %>" style="background-image: url('<%= article.data.previewimage %>');">
            <h2 class="project-title <%= article.data.title.downcase %>-title">
              <%= article.data.title %>
            </h2>

          </div>
        <% end %>

      <% end %>
      </div>
    </projectcards>
